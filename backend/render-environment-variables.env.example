# ============================================
# Render.com Environment Variables - TEMPLATE
# Copy this file to render-environment-variables.env and fill in your actual values
# NEVER commit the file with real credentials to version control
# ============================================

# Profile Configuration
SPRING_PROFILES_ACTIVE=prod
PORT=8080

# ============================================
# Database Configuration (MongoDB Atlas)
# ============================================
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DATABASE=your_database_name_here

# ============================================
# JWT Security Configuration
# ============================================
JWT_SECRET=your_strong_jwt_secret_here_(at_least_32_characters)
JWT_EXPIRATION=86400000

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=your_frontend_urls_here_comma_separated

# ============================================
# Admin Configuration
# ============================================
ADMIN_SECRET_KEY=your_admin_secret_key_here