# ============================================
# Quiz Application Production Configuration - TEMPLATE
# Copy this file to application-prod.properties and fill in your actual values
# NEVER commit the file with real credentials to version control
# ============================================

# Application Name
spring.application.name=Quiz-App

# Active Profile
# Note: Do not set spring.profiles.active in profile-specific files
# spring.profiles.active=prod

# Server Configuration
server.port=${PORT:8080}

# ============================================
# Database Configuration (MongoDB Atlas)
# ============================================
spring.data.mongodb.uri=${MONGODB_URI:your_mongodb_connection_string_here}
spring.data.mongodb.database=${MONGODB_DATABASE:your_database_name_here}
spring.data.mongodb.auto-index-creation=true

# ============================================
# JWT Security Configuration
# ============================================
# JWT Secret Key - Use environment variable in production
jwt.secret=${JWT_SECRET:your_strong_jwt_secret_here_(at_least_32_characters)}
# JWT Token expiration time in milliseconds (24 hours = 86400000ms)
jwt.expiration=${JWT_EXPIRATION:86400000}

# ============================================
# CORS Configuration
# ============================================
# Allow multiple origins for production
cors.allowed.origins=${CORS_ALLOWED_ORIGINS:your_frontend_urls_here_comma_separated}

# ============================================
# Admin Configuration
# ============================================
# Admin registration secret key - Use environment variable in production
admin.secret.key=${ADMIN_SECRET_KEY:your_admin_secret_key_here}

# ============================================
# Logging Configuration
# ============================================
logging.level.com.Quiz.App=INFO
logging.level.org.springframework.security=INFO
logging.level.org.springframework.web=INFO

# ============================================
# Production Optimizations
# ============================================
# Disable banner for production
spring.main.banner-mode=off

# Connection pool settings are included in the main MongoDB URI above

# Management endpoints (for health checks)
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=when-authorized